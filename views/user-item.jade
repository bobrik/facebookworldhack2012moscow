li.item(data-installed=item.installed*1, data-fbid=item.id, data-game_id=item.game_id, data-incoming=item.incoming*1, data-opponent_word=item.opponent_word)
    if (!item.opponent)
        img.arrow(src="/images/list of friends/RedArrow.png")

    if item.photo
         img(src=item.photo)
    else
        img(src=item.picture.data.url)

    div.description
        if item.name
            div.name=item.name
        else
            div.name=item.first_name

        if (!item.opponent)
            if (item.installed)
                div.text Start game
            else
                div.text Invite to game
        else
            div.text Your move

